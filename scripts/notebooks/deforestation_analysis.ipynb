   "source": [
    "## DeforestationAnalyzer Class Definition"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "class DeforestationAnalyzer:\n",
    "    \"\"\"A class for analyzing deforestation patterns and rates using Earth Engine.\"\"\"\n",
    "\n",
    "    def __init__(self, study_area, output_dir):\n",
    "        \"\"\"\n",
    "        Initialize the DeforestationAnalyzer with study area and output directory.\n",
    "\n",
    "        Args:\n",
    "            study_area (ee.FeatureCollection): Study area geometry in Earth Engine\n",
    "            output_dir (str): Path to the directory for saving outputs\n",
    "        \"\"\"\n",
    "        self.study_area = study_area\n",
    "        self.output_dir = output_dir\n",
    "        self.logger = logging.getLogger(__name__)\n",
    "        \n",
    "        # Load Hansen dataset\n",
    "        self.hansen = ee.Image(\"UMD/hansen/global_forest_change_2023_v1_11\")\n",
    "        \n",
    "        # Load GLAD GLCLUC2020 dataset\n",
    "        self.glad_lc = ee.ImageCollection(\"projects/glad/GLCLU2020/V1\")\n",
    "        \n",
    "        # Define Canada's forest parameters\n",
    "        self.min_tree_height = 5  # meters\n",
    "        self.min_canopy_cover = 25  # percent\n",
    "        self.min_area = 0.5  # hectares\n",
    "        self.min_width = 20  # meters\n",
    "        \n",
    "        # Create output directory if it doesn't exist\n",
    "        os.makedirs(output_dir, exist_ok=True)\n",
    "    \n",
    "    def apply_canada_forest_definition(self):\n",
    "        \"\"\"\n",
    "        Apply Canada's forest definition to the Hansen dataset.\n",
    "        \n",
    "        Returns:\n",
    "            ee.Image: Forest cover in 2000 meeting Canada's definition\n",
    "        \"\"\"\n",
    "        try:\n",
    "            # Get tree cover in 2000\n",
    "            treecover2000 = self.hansen.select(['treecover2000'])\n",
    "            \n",
    "            # Apply canopy cover threshold (>25%)\n",
    "            forest_cover = treecover2000.gte(self.min_canopy_cover)\n",
    "            \n",
    "            # We can't directly apply height criteria with Hansen data\n",
    "            # But we can use the canopy cover as a proxy\n",
    "            # Apply morphological operations to enforce minimum area and width\n",
    "            # This is a simplification - in practice would need more detailed height data\n",
    "            kernel = ee.Kernel.circle(radius=self.min_width/30)\n",
    "            forest_cover = forest_cover.focal_min(kernel=kernel).focal_max(kernel=kernel)\n",
    "            \n",
    "            self.logger.info(\"Applied Canada's forest definition to Hansen dataset\")\n",
    "            return forest_cover\n",
    "        except Exception as e:\n",
    "            self.logger.error(f\"Error applying Canada's forest definition: {str(e)}\")\n",
    "            raise\n",
    "    \n",
    "    def analyze_forest_cover_change(self):\n",
    "        \"\"\"\n",
    "        Analyze forest cover change using Hansen dataset.\n",
    "        \n",
    "        Returns:\n",
    "            dict: Dictionary containing analysis results\n",
    "        \"\"\"\n",
    "        try:\n",
    "            # Apply Canada's forest definition\n",
    "            forest_2000 = self.apply_canada_forest_definition()\n",
    "            \n",
    "            # Get forest loss year (1-23, representing 2001-2023)\n",
    "            loss_year = self.hansen.select(['lossyear'])\n",
    "            \n",
    "            # Create a mask for the study area\n",
    "            area_mask = ee.Image(1).clip(self.study_area)\n",
    "            \n",
    "            # Calculate area in hectares\n",
    "            pixel_area = ee.Image.pixelArea().divide(10000)  # Convert to hectares\n",
    "            \n",
    "            # Calculate total forest area in 2000\n",
    "            forest_area_2000 = forest_2000.multiply(pixel_area).reduceRegion(\n",
    "                reducer=ee.Reducer.sum(),\n",
    "                geometry=self.study_area,\n",
    "                scale=30,\n",
    "                maxPixels=1e12\n",
    "            ).get('treecover2000')\n",
    "            \n",
    "            # Calculate forest loss by year\n",
    "            loss_by_year = {}\n",
    "            for year in range(1, 24):  # 2001-2023\n",
    "                # Create mask for this year's loss\n",
    "                this_year_loss = loss_year.eq(year).And(forest_2000)\n",
    "                \n",
    "                # Calculate area lost this year\n",
    "                area_lost = this_year_loss.multiply(pixel_area).reduceRegion(\n",
    "                    reducer=ee.Reducer.sum(),\n",
    "                    geometry=self.study_area,\n",
    "                    scale=30,\n",
    "                    maxPixels=1e12\n",
    "                ).get('lossyear')\n",
    "                \n",
    "                loss_by_year[year + 2000] = area_lost\n",
    "            \n",
    "            # Calculate forest gain (2000-2012 only in Hansen)\n",
    "            gain = self.hansen.select(['gain'])\n",
    "            gain_area = gain.multiply(pixel_area).reduceRegion(\n",
    "                reducer=ee.Reducer.sum(),\n",
    "                geometry=self.study_area,\n",
    "                scale=30,\n",
    "                maxPixels=1e12\n",
    "            ).get('gain')\n",
    "            \n",
    "            # Prepare results\n",
    "            results = {\n",
    "                'forest_area_2000': forest_area_2000.getInfo(),\n",
    "                'loss_by_year': {year: area.getInfo() for year, area in loss_by_year.items()},\n",
    "                'total_loss': sum([area.getInfo() for area in loss_by_year.values()]),\n",
    "                'gain_area': gain_area.getInfo(),\n",
    "                'study_area_name': 'Algonquin Park'\n",
    "            }\n",
    "            \n",
    "            self.logger.info(\"Completed forest cover change analysis\")\n",
    "            return results\n",
    "        except Exception as e:\n",
    "            self.logger.error(f\"Error analyzing forest cover change: {str(e)}\")\n",
    "            raise\n",
    "    \n",
    "    def analyze_glad_land_cover(self):\n",
    "        \"\"\"\n",
    "        Analyze land cover using GLAD GLCLUC2020 dataset.\n",
    "        \n",
    "        Returns:\n",
    "            dict: Dictionary containing land cover analysis results\n",
    "        \"\"\"\n",
    "        try:\n",
    "            # Get the GLAD land cover for 2020\n",
    "            glad_lc_2020 = self.glad_lc.filterDate('2020-01-01', '2020-12-31').first()\n",
    "            \n",
    "            # Define land cover classes\n",
    "            lc_classes = {\n",
    "                1: 'Evergreen Forest',\n",
    "                2: 'Deciduous Forest',\n",
    "                3: 'Mixed Forest',\n",
    "                4: 'Woody Wetland',\n",
    "                5: 'Herbaceous Wetland',\n",
    "                6: 'Grassland',\n",
    "                7: 'Shrubland',\n",
    "                8: 'Cropland',\n",
    "                9: 'Bare Ground',\n",
    "                10: 'Urban/Built-up',\n",
    "                11: 'Water',\n",
    "                12: 'Snow/Ice',\n",
    "                13: 'Herbaceous Vegetation'\n",
    "            }\n",
    "            \n",
    "            # Calculate area in hectares\n",
    "            pixel_area = ee.Image.pixelArea().divide(10000)  # Convert to hectares\n",
    "            \n",
    "            # Calculate area for each land cover class\n",
    "            lc_areas = {}\n",
    "            for lc_id, lc_name in lc_classes.items():\n",
    "                # Create mask for this land cover class\n",
    "                lc_mask = glad_lc_2020.eq(lc_id)\n",
    "                \n",
    "                # Calculate area\n",
    "                area = lc_mask.multiply(pixel_area).reduceRegion(\n",
    "                    reducer=ee.Reducer.sum(),\n",
    "                    geometry=self.study_area,\n",
    "                    scale=30,\n",
    "                    maxPixels=1e12\n",
    "                ).get('landcover')\n",
    "                \n",
    "                lc_areas[lc_name] = area\n",
    "            \n",
    "            # Prepare results\n",
    "            results = {\n",
    "                'land_cover_areas': {lc_name: area.getInfo() for lc_name, area in lc_areas.items()},\n",
    "                'study_area_name': 'Algonquin Park'\n",
    "            }\n",
    "            \n",
    "            self.logger.info(\"Completed GLAD land cover analysis\")\n",
    "            return results\n",
    "        except Exception as e:\n",
    "            self.logger.error(f\"Error analyzing GLAD land cover: {str(e)}\")\n",
    "            raise\n",
    "    \n",
    "    def create_deforestation_map(self):\n",
    "        \"\"\"\n",
    "        Create an interactive map showing deforestation patterns.\n",
    "        \n",
    "        Returns:\n",
    "            geemap.Map: Interactive map object\n",
    "        \"\"\"\n",
    "        try:\n",
    "            # Apply Canada's forest definition\n",
    "            forest_2000 = self.apply_canada_forest_definition()\n",
    "            \n",
    "            # Get forest loss year (1-23, representing 2001-2023)\n",
    "            loss_year = self.hansen.select(['lossyear'])\n",
    "            \n",
    "            # Create a visualization for the loss year\n",
    "            loss_vis = {\n",
    "                'min': 1,\n",
    "                'max': 23,\n",
    "                'palette': [\n",
    "                    'FF0000', 'FF1100', 'FF2300', 'FF3400', 'FF4600',\n",
    "                    'FF5700', 'FF6900', 'FF7B00', 'FF8C00', 'FF9E00',\n",
    "                    'FFAF00', 'FFC100', 'FFD300', 'FFE400', 'FFF600',\n",
    "                    'F7FF00', 'E5FF00', 'D4FF00', 'C2FF00', 'B0FF00',\n",
    "                    '9FFF00', '8DFF00', '7CFF00'\n",
    "                ]\n",
    "            }\n",
    "            \n",
    "            # Create a map\n",
    "            map_obj = geemap.Map()\n",
    "            \n",
    "            # Add forest cover in 2000\n",
    "            map_obj.add_layer(\n",
    "                forest_2000.clip(self.study_area),\n",
    "                {'palette': ['green']},\n",
    "                'Forest Cover 2000'\n",
    "            )\n",
    "            \n",
    "            # Add forest loss by year\n",
    "            map_obj.add_layer(\n",
    "                loss_year.updateMask(loss_year.gt(0)).clip(self.study_area),\n",
    "                loss_vis,\n",
    "                'Forest Loss Year'\n",
    "            )\n",
    "            \n",
    "            # Add study area boundary\n",
    "            map_obj.add_layer(self.study_area, {}, 'Study Area')\n",
    "            \n",
    "            # Center map on study area\n",
    "            map_obj.center_object(self.study_area, zoom=10)\n",
    "            \n",
    "            # Add a legend\n",
    "            map_obj.add_legend(title=\"Forest Loss Year\", builtin_legend='Spectral')\n",
    "            \n",
    "            self.logger.info(\"Created interactive deforestation map\")\n",
    "            return map_obj\n",
    "        except Exception as e:\n",
    "            self.logger.error(f\"Error creating deforestation map: {str(e)}\")\n",
    "            raise\n",
    "    \n",
    "    def save_results(self, results, output_prefix):\n",
    "        \"\"\"\n",
    "        Save analysis results to CSV file.\n",
    "        \n",
    "        Args:\n",
    "            results (dict): Analysis results\n",
    "            output_prefix (str): Prefix for output filename\n",
    "        \"\"\"\n",
    "        try:\n",
    "            # Save forest cover change results\n",
    "            if 'loss_by_year' in results:\n",
    "                # Create DataFrame for loss by year\n",
    "                loss_df = pd.DataFrame({\n",
    "                    'Year': list(results['loss_by_year'].keys()),\n",
    "                    'Area_Lost_Ha': list(results['loss_by_year'].values())\n",
    "                })\n",
    "                \n",
    "                # Calculate cumulative loss and percentage\n",
    "                loss_df['Cumulative_Loss_Ha'] = loss_df['Area_Lost_Ha'].cumsum()\n",
    "                loss_df['Percent_of_2000_Forest'] = (loss_df['Area_Lost_Ha'] / results['forest_area_2000']) * 100\n",
    "                loss_df['Cumulative_Percent'] = loss_df['Cumulative_Loss_Ha'] / results['forest_area_2000'] * 100\n",
    "                \n",
    "                # Save to CSV\n",
    "                output_path = os.path.join(self.output_dir, f\"{output_prefix}_loss_by_year.csv\")\n",
    "                loss_df.to_csv(output_path, index=False)\n",
    "                \n",
    "                # Create summary DataFrame\n",
    "                summary_df = pd.DataFrame([\n",
    "                    {'Metric': 'Forest Area in 2000 (ha)', 'Value': results['forest_area_2000']},\n",
    "                    {'Metric': 'Total Forest Loss 2001-2023 (ha)', 'Value': results['total_loss']},\n",
    "                    {'Metric': 'Forest Gain 2000-2012 (ha)', 'Value': results['gain_area']},\n",
    "                    {'Metric': 'Net Change (ha)', 'Value': results['gain_area'] - results['total_loss']},\n",
    "                    {'Metric': 'Average Annual Loss (ha/year)', 'Value': results['total_loss'] / 23},\n",
    "                    {'Metric': 'Percent Forest Lost', 'Value': (results['total_loss'] / results['forest_area_2000']) * 100}\n",
    "                ])\n",
    "                \n",
    "                # Save summary to CSV\n",
    "                summary_path = os.path.join(self.output_dir, f\"{output_prefix}_summary.csv\")\n",
    "                summary_df.to_csv(summary_path, index=False)\n",
    "                \n",
    "                self.logger.info(f\"Saved forest change results to {output_path} and {summary_path}\")\n",
    "            \n",
    "            # Save land cover results\n",
    "            if 'land_cover_areas' in results:\n",
    "                # Create DataFrame for land cover areas\n",
    "                lc_df = pd.DataFrame({\n",
    "                    'Land_Cover_Class': list(results['land_cover_areas'].keys()),\n",
    "                    'Area_Ha': list(results['land_cover_areas'].values())\n",
    "                })\n",
    "                \n",
    "                # Calculate percentage\n",
    "                total_area = lc_df['Area_Ha'].sum()\n",
    "                lc_df['Percent'] = (lc_df['Area_Ha'] / total_area) * 100\n",
    "                \n",
    "                # Save to CSV\n",
    "                output_path = os.path.join(self.output_dir, f\"{output_prefix}_land_cover.csv\")\n",
    "                lc_df.to_csv(output_path, index=False)\n",
    "                \n",
    "                self.logger.info(f\"Saved land cover results to {output_path}\")\n",
    "        except Exception as e:\n",
    "            self.logger.error(f\"Error saving results: {str(e)}\")\n",
    "            raise\n",
    "    \n",
    "    def plot_deforestation_trends(self, results):\n",
    "        \"\"\"\n",
    "        Create plots showing deforestation trends.\n",
    "        \n",
    "        Args:\n",
    "            results (dict): Analysis results containing loss_by_year\n",
    "        \"\"\"\n",
    "        try:\n",
    "            if 'loss_by_year' not in results:\n",
    "                raise ValueError(\"Results do not contain loss_by_year data\")\n",
    "            \n",
    "            # Create DataFrame for plotting\n",
    "            years = list(results['loss_by_year'].keys())\n",
    "            loss_areas = list(results['loss_by_year'].values())\n",
    "            \n",
    "            # Calculate cumulative loss\n",
    "            cumulative_loss = np.cumsum(loss_areas)\n",
    "            percent_loss = [area / results['forest_area_2000'] * 100 for area in loss_areas]\n",
    "            cumulative_percent = [cum / results['forest_area_2000'] * 100 for cum in cumulative_loss]\n",
    "            \n",
    "            # Create figure with 2 subplots\n",
    "            fig, (ax1, ax2) = plt.subplots(2, 1, figsize=(12, 10))\n",
    "            \n",
    "            # Plot annual loss\n",
    "            bars = ax1.bar(years, loss_areas, color='red', alpha=0.7)\n",
    "            ax1.set_xlabel('Year')\n",
    "            ax1.set_ylabel('Forest Loss (hectares)')\n",
    "            ax1.set_title('Annual Forest Loss in Algonquin Park (2001-2023)')\n",
    "            ax1.grid(axis='y', linestyle='--', alpha=0.7)\n",
    "            \n",
    "            # Add trend line\n",
    "            z = np.polyfit(years, loss_areas, 1)\n",
    "            p = np.poly1d(z)\n",
    "            ax1.plot(years, p(years), \"r--\", alpha=0.8)\n",
    "            \n",
    "            # Plot cumulative loss\n",
    "            ax2.plot(years, cumulative_loss, 'b-', linewidth=2.5)\n",
    "            ax2.set_xlabel('Year')\n",
    "            ax2.set_ylabel('Cumulative Forest Loss (hectares)')\n",
    "            ax2.set_title('Cumulative Forest Loss in Algonquin Park (2001-2023)')\n",
    "            ax2.grid(linestyle='--', alpha=0.7)\n",
    "            \n",
    "            # Add percentage on secondary y-axis\n",
    "            ax3 = ax2.twinx()\n",
    "            ax3.plot(years, cumulative_percent, 'g--', linewidth=2)\n",
    "            ax3.set_ylabel('Percent of 2000 Forest Cover')\n",
    "            \n",
    "            # Add legend\n",
    "            ax2.legend(['Cumulative Loss (ha)'], loc='upper left')\n",
    "            ax3.legend(['Percent of 2000 Forest'], loc='upper right')\n",
    "            \n",
    "            plt.tight_layout()\n",
    "            \n",
    "            # Save the figure\n",
    "            output_path = os.path.join(self.output_dir, \"deforestation_trends.png\")\n",
    "            plt.savefig(output_path, dpi=300, bbox_inches='tight')\n",
    "            plt.close()\n",
    "            \n",
    "            self.logger.info(f\"Saved deforestation trend plots to {output_path}\")\n",
    "            \n",
    "            # Create a heatmap of forest loss by year\n",
    "            plt.figure(figsize=(12, 8))\n",
    "            \n",
    "            # Create a colormap for years\n",
    "            cmap = plt.cm.viridis_r\n",
    "            norm = colors.Normalize(vmin=min(years), vmax=max(years))\n",
    "            \n",
    "            # Create scatter plot with size proportional to loss area\n",
    "            sizes = [max(100, area * 0.5) for area in loss_areas]  # Scale for visibility\n",
    "            sc = plt.scatter(years, [1] * len(years), c=years, cmap=cmap, norm=norm, s=sizes, alpha=0.7)\n",
    "            \n",
    "            # Add colorbar\n",
    "            cbar = plt.colorbar(sc)\n",
    "            cbar.set_label('Year')\n",
    "            \n",
    "            # Customize plot\n",
    "            plt.yticks([])\n",
    "            plt.xlabel('Year')\n",
